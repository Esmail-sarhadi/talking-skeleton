<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".AboutUs">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/talkingskeleton"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:src="@drawable/skeleton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="30dp" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="30dp" />


        <TextView
            android:id="@+id/about.us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/iransansbold"
            android:text="درباره ما"
            android:textColor="@color/black"
            android:textSize="28sp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/talkingskeleton" />



        <TextView
            android:id="@+id/about.us1"
            android:layout_width="297dp"
            android:layout_height="105dp"
            android:fontFamily="@font/iransans"
            android:text="ما اینجا هستیم
برای آسانی و هوشمندی زندگی شما"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about.us" />


        <Button
            android:id="@+id/more.information1"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:backgroundTint="#9FC53A"
            android:fontFamily="@font/iransanslight"
            android:text="اطلاعات بیشتر"
            android:textColor="@color/black"
            android:textSize="21sp"
            android:layout_marginTop="105dp"
            app:layout_constraintEnd_toEndOf="@id/about.us1"
            app:layout_constraintStart_toStartOf="@id/about.us1"
            app:layout_constraintTop_toBottomOf="@+id/about.us1"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>